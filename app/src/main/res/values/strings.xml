<resources>
    <!-- Name for the app (even if it's never translated or clarified, non-latin-alphaber languages might use a phonetic transcription)
    Apparently XML variables can only be interpolated from the Java code.
    Until we find a comfortable way to interpolate them, the name for the app is hardcoded in several variables in the intro_ namespace. -->
    <string name="app_name">Yoke</string>

    <!-- Strings for the welcome screen, which also copies the files for the WebView and checks the state of the external storage -->
    <string name="intro_loading"><p>Loading…</p></string>
    <string name="intro_welcome"><p>%1$s is a configurable gamepad to control another machine via Wi-Fi.</p></string>
    <string name="intro_create_files">
        <p>No gamepad layout could be found.</p>
        <p>Please copy the default layout to <tt>%1$s</tt>. Then, click the button.</p>
    </string>
    <string name="intro_unavailable_storage">
        <p>External storage is not available.</p>
        <p>You may be missing a memory card, or another program could be preventing Yoke from accessing it. Please click the button to try again.</p>
    </string>
    <string name="intro_security_exception">
        <p>External storage is mounted as read-write, but Yoke couldn\'t create folders in it.</p>
        <p>Please check if another program could be preventing Yoke from writing files. Then, click the button to try again.</p>
    </string>
    <string name="intro_readonly_storage">
        <p>No gamepad layout could be found.</p>
        <p>A default layout can be copied to <tt>%1$s</tt>, but that folder is mounted as read-only right now. You might have your memory card locked, or another program could be preventing Yoke from writing files.</p>
        <p>Please fix the problem and click the button to try again.</p>
    </string>
    <string name="intro_onward">Copy default layout</string>

    <!-- Strings for the toolbar, displayed as soon as the app is opened -->
    <string name="toolbar_connected_to">Connected to</string>
    <string name="toolbar_connect_to">Connect to</string>
    <!-- Reconnect button -->
    <string name="toolbar_reconnect">Reconnect</string>


    <!-- Toasts shown on error -->
    <string name="toast_could_not_connect">Failed to connect to %1$s:%2$d.</string>
    <string name="toast_invalid_address">Invalid address</string>
    <string name="toast_cant_reconnect_if_not_connected">Please use the dropdown menu to connect to a machine.</string>

    <!-- These strings are displayed when the user opens the spinner to select a machine to connect to -->
    <string name="dropdown_connect_to">Connect to…</string>
    <string name="dropdown_nothing">→ nothing</string>
    <string name="dropdown_enter_ip">→ new manual connection</string>

    <!-- These strings are displayed when the user chooses to specify directly IP address and port -->
    <string name="enter_ip_title">Enter IP address and port</string>
    <string name="enter_ip_hint">e.g. 192.168.1.123:11111</string>
    <string name="enter_ip_ok">OK</string>
    <string name="enter_ip_cancel">Cancel</string>

    <!-- Debug messages -->
    <string name="log_adding_address">Adding %1$s…</string>
    <string name="log_directly_connecting">Connecting directly to IP address %1$s…</string>
    <string name="log_discovery_error">Service discovery failed with error code %1$d.</string>
    <string name="log_discovery_started">Service discovery started.</string>
    <string name="log_discovery_stopped">Service discovery stopped: "%1$s".</string>
    <string name="log_loading_url">Loading from %1$s</string>
    <string name="log_nothing_selected">Nothing selected.</string>
    <string name="log_open_udp_error">Failed to open UDP socket. Error message following:</string>
    <string name="log_open_udp_success">Connected.</string>
    <string name="log_opening_udp">Trying to open UDP socket to %1$s on port %2$d…</string>
    <string name="log_send_error">Error while sending message "%1$s".</string>
    <string name="log_service_found">Service found. </string>
    <string name="log_service_lost">Service lost. </string>
    <string name="log_service_not_null">SERVICE NOT NULL!!!</string>
    <string name="log_service_resolve_error">Resolve failed with error code %1$d.</string>
    <string name="log_service_resolve_success">Resolve succeeded. </string>
    <string name="log_service_resolving">Resolving service "%1$s"…</string>
    <string name="log_service_targeting">New service target: "%1$s".</string>
    <string name="log_udp_closed">Connection closed.</string>
</resources>

